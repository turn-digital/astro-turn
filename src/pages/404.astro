---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header/Header.astro";
import Footer from "../components/Footer/Footer.jsx";
import { t, changeLanguage } from "i18next";

changeLanguage("lv");
---

<Layout title="Welcome to Astro.">
    <div class="error-page">
    <Header />
    <main class="error-page__block">
        <div class="wrapper">
            <p class="error-page__text">{t("global.errorTag")}</p>
            <h1 class="error-page__title">{t("global.errorTitle")}</h1>
            <p class="error-page__text">{t("global.errorText")}</p>
            <a
                class="error-page__link"
                href="/"
            >
            {t("global.errorBtn")}
                <img class="error-page__svg" src="./src/assets/images/svg/arrow-right.svg" alt="arrow right" />
            </a>
        </div>
        <div class="error-page__circle error-page__circle--first"></div>
        <div class="error-page__circle error-page__circle--second"></div>
        <div class="error-page__circle error-page__circle--third"></div>
        <div class="error-page__circle error-page__circle--fourth"></div>
    </main>
    <Footer />
    </div>
</Layout>

<style lang="scss">
	@import '../styles/styles.scss';
</style>