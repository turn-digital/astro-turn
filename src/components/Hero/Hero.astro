---
import { Image } from '@astrojs/image/components';

export interface Info {
	title: string;
	buttonText: string;
}
export interface Props {
	info: Info;
}

const { info } = Astro.props;
---
    <section class="hero">
      <div class="wrapper">
        <h1 class="hero__title" set:html={info.title}></h1>
        <div>
          <a
            class="hero__link"
            href="/astro-turn/"
          >
            {info.buttonText}
            <Image class="hero__svg" src="/astro-turn/assets/images/svg/arrow-right.svg" alt="arrow right" width={14} height={20} />
          </a>
        </div>
      </div>
    </section>
