---
export interface Info {
	title: string;
  buttonText: string;
}
export interface Props {
	info: Info;
}

const { info} = Astro.props;
---

<section class="hero">
  <div class="wrapper">
    <h1 class="hero__title">
      {info.title}
    </h1>
    <div>
      <a href="/" class="hero__link">
          {info.buttonText}
          <img class="hero__svg" src="./src/assets/images/svg/arrow-right.svg" alt="test"/>
      </a>
    </div>
  </div>
</section>
<style lang="scss">
	@import './hero.scss';
</style>
