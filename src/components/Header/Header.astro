---
import { Modal } from 'accessible-astro-components'
import { t, changeLanguage } from "i18next";
import { Image } from '@astrojs/image/components';

changeLanguage("lv");
---

<div class="wrapper">
  <header class="header">
    <a class="header__logo"  href="/astro-turn/">
      <Image src="/astro-turn/assets/images/logo-header.png" alt="logo" width={102} height={40} />
    </a>
    <div class="header__menu">
      <div>
      <Modal
        triggerId="modal-header--mob"
        class="header__menu--mob wrapper"
        >
        <div class="header__box">
          <a class="header__logo" href="/astro-turn/" onclick="closeModal()">
            <Image src="/astro-turn/assets/images/logo-header.png" alt="logo" width={102} height={40} />
          </a>
          <button
            class="header__button header__button--close"
            onclick="closeModal()"
          >
            <Image src="/astro-turn/assets/images/svg/menu-close.svg" alt="menu close" width={40} height={40} />
          </button>
        </div>
        <nav class="header__nav header__nav--mob">
        <a class="header__link" href="/astro-turn/" onclick="closeModal()">{t("global.headerHome")}</a>
        <a class="header__link "href="/astro-turn/#story"  onclick="closeModal()">{t("global.headerStory")}</a>
        <a class="header__link" href="/astro-turn/#services" onclick="closeModal()">{t("global.headerServices")}</a>
        <a class="header__link" href="/astro-turn/#contacts" onclick="closeModal()">{t("global.headerContacts")}</a>
        </nav>
      </Modal>
      </div>
      <nav class="header__nav header__nav--desc">
        <a class="header__link" href="/astro-turn/">{t("global.headerHome")}</a>
        <a class="header__link "href="/astro-turn/#story"  onclick="closeModal()">{t("global.headerStory")}</a>
        <a class="header__link" href="/astro-turn/#services">{t("global.headerServices")}</a>
        <a class="header__link" href="/astro-turn/#contacts">{t("global.headerContacts")}</a>
      </nav>
      
    </div>
    <button
      class="header__button header__button--mob"
      id="modal-header--mob"
    >
      <Image src="/astro-turn/assets/images/svg/menu.svg" alt="menu open" width={38} height={26} />
    </button>
  </header>
</div>
