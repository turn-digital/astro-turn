---
import { t, changeLanguage } from "i18next";
import Tag from "../Tag/Tag.jsx";
changeLanguage("lv");
---
<section id="contacts" class="contacts">
<div class="wrapper">
  <Tag info={{title:t("global.contactsTag")}}/>
  <h2 class="contacts__title">{t("global.contactsHeader")}</h2>
  <p class="contacts__text" set:html={t("global.contactsContent")}></p>
  <ul class="contacts__info">
    <li><p class="contacts__text contacts__text--bold">{t("global.contactsName")}</p></li>
    <li><a class="contacts__text contacts__text--hover" href={"tel:" + t("global.contactsPhone")}>{t("global.contactsPhone")}</a></li>
    <li><a class="contacts__text contacts__text--hover" href={"mailto:" + t("global.contactsEmail")}>{t("global.contactsEmail")}</a></li>
  </ul>
</div>
<div class="contacts__circle contacts__circle--first"></div>
<div class="contacts__circle contacts__circle--second"></div>
<div class="contacts__circle contacts__circle--third"></div>
<div class="contacts__circle contacts__circle--fourth"></div>
</section>